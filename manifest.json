{
  "name": "Green Chrome",
  "description": "Green Chrome displays how sustainable a webpage is and which elements consume the most energy.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions":["https://api.websitecarbon.com/*", "https://websitecarbon.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "512": "icon.png"
  }
}
